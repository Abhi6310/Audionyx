<style>
  nav {
    background-color: #333;
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-item {
    font-size: 15px; /* Corrected from text-size to font-size */
  }

  .navbar {
    list-style-type: none;
    display: flex;
    gap: 20px;
  }

  .navbar-brand {
    font-size: 20px; /* Slightly larger than navbar links */
    font-weight: bold;
    color: #9a69ba; /* Static purple color */

  }

  /* Make nav links smaller than the brand name */
